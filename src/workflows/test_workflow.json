{
    "workflow_id": "test_workflow",
    "nodes": {
      "trigger": {
        "type": "trigger",
        "config": {}
      },
      "fetch_user": {
        "type": "data_fetch",
        "config": {
          "query": "SELECT * FROM users WHERE id = ${input.user_id}"
        }
      },
      "send_welcome": {
        "type": "send_email",
        "config": {
          "to": "${fetch_user.email}",
          "subject": "Welcome!",
          "template": "welcome_email"
        }
      }
    },
    "edges": [
      { "from": "trigger", "to": "fetch_user" },
      { "from": "fetch_user", "to": "send_welcome" }
    ]
  }
  